<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Viền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Nền trong suốt cho viền -->
            <stroke
                android:width="3dp"
                android:color="#AFC7B1"/> <!-- Màu của viền -->
            <corners android:radius="15dp"/> <!-- Bán kính bo góc -->
        </shape>
    </item>

    <!-- Màu nền -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Màu nền của button -->
            <corners android:radius="15dp"/> <!-- Bán kính bo góc -->
        </shape>
    </item>
</layer-list>
