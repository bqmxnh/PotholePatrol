<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:paddingVertical="2dp"
            android:paddingHorizontal="1dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/setting"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="214dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/setting_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                            <LinearLayout
                                android:id="@+id/setting_background"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#F5F5F5"
                                android:paddingTop="26dp"
                                android:paddingBottom="175dp"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/account_title"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="34dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Account"/>

                                <LinearLayout
                                    android:id="@+id/account_frame"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/setting_frame"
                                    android:paddingVertical="18dp"
                                    android:paddingHorizontal="21dp"
                                    android:layout_marginBottom="18dp"
                                    android:layout_marginHorizontal="25dp"
                                    android:elevation="10dp"
                                    android:orientation="vertical">

                                    <!-- "Edit profile" option -->
                                    <LinearLayout
                                        android:id="@+id/edit_profile"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginBottom="17dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ic_edit_profile"
                                            android:layout_width="20dp"
                                            android:layout_height="19dp"
                                            android:layout_marginEnd="42dp"
                                            android:src="@mipmap/ic_edit_profile"
                                            android:scaleType="fitXY"/>

                                        <TextView
                                            android:id="@+id/edit_profile_title"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:text="Edit profile"/>
                                    </LinearLayout>

                                    <!-- "Personalization" option -->
                                    <LinearLayout
                                        android:id="@+id/personalization"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginBottom="14dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ic_personalization"
                                            android:layout_width="20dp"
                                            android:layout_height="25dp"
                                            android:layout_marginEnd="42dp"
                                            android:src="@mipmap/ic_personalization"
                                            android:scaleType="fitXY"/>

                                        <TextView
                                            android:id="@+id/personalization_title"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:text="Personalization"/>
                                    </LinearLayout>

                                    <!-- "Notifications" option -->
                                    <LinearLayout
                                        android:id="@+id/notification"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginBottom="13dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ic_notification"
                                            android:layout_width="20dp"
                                            android:layout_height="25dp"
                                            android:layout_marginEnd="42dp"
                                            android:src="@mipmap/ic_setting_notification"
                                            android:scaleType="fitXY"/>

                                        <TextView
                                            android:id="@+id/notification_title"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:text="Notifications"/>
                                    </LinearLayout>

                                    <!-- "Privacy" option -->
                                    <LinearLayout
                                        android:id="@+id/privacy"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/ic_privacy"
                                            android:layout_width="20dp"
                                            android:layout_height="26dp"
                                            android:layout_marginEnd="42dp"
                                            android:src="@mipmap/ic_privacy"
                                            android:scaleType="fitXY"/>

                                        <TextView
                                            android:id="@+id/privacy_title"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:text="Privacy"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/term_and_support_title"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="34dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Terms &amp; Support"/>

                                <RelativeLayout
                                    android:id="@+id/term_and_support"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="27dp"
                                    android:layout_marginHorizontal="26dp"
                                    android:clipChildren="false"
                                    android:clipToPadding="false">

                                    <LinearLayout
                                        android:id="@+id/terms_support_frame"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/setting_frame"
                                        android:paddingVertical="18dp"
                                        android:paddingHorizontal="21dp"
                                        android:elevation="10dp"
                                        android:orientation="vertical">

                                        <!-- "Report a problem" option -->
                                        <LinearLayout
                                            android:id="@+id/report_problem"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:layout_marginBottom="14dp"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/report_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginEnd="42dp"
                                                android:src="@mipmap/ic_report_a_problem"
                                                android:scaleType="fitXY"/>

                                            <TextView
                                                android:id="@+id/report_text"
                                                android:text="Report a problem"
                                                android:textColor="#000000"
                                                android:textSize="16sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                        </LinearLayout>

                                        <!-- "Terms and Policies" option -->
                                        <LinearLayout
                                            android:id="@+id/terms_policies"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/terms_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginEnd="42dp"
                                                android:src="@mipmap/ic_terms"
                                                android:scaleType="fitXY"/>

                                            <TextView
                                                android:id="@+id/terms_text"
                                                android:text="Terms and Policies"
                                                android:textColor="#000000"
                                                android:textSize="16sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/action_title"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginStart="34dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Actions"/>

                                <LinearLayout
                                    android:id="@+id/logout_section"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="18dp"
                                    android:clipChildren="false"
                                    android:clipToPadding="false"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/logout_frame"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/setting_frame"
                                        android:paddingVertical="18dp"
                                        android:paddingHorizontal="21dp"
                                        android:elevation="10dp"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/ic_logout"
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_marginEnd="42dp"
                                            android:src="@mipmap/ic_logout"
                                            android:scaleType="fitXY"/>

                                        <TextView
                                            android:id="@+id/logout_title"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:text="Log out"/>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </ScrollView>


                        <RelativeLayout
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:id="@+id/user_information_area"
                            android:layout_marginTop="-214dp"
                            android:layout_marginStart="1dp"
                            android:layout_width="408dp"
                            android:layout_height="263dp">

                            <ImageView
                                android:id="@+id/background_user_information"
                                android:layout_width="408dp"
                                android:layout_height="263dp"
                                android:src="@drawable/image_4"
                                android:scaleType="fitXY"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="vertical"
                                android:paddingLeft="24dp">

                                <LinearLayout
                                    android:id="@+id/setting_frame"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="45dp"
                                    android:layout_marginEnd="18dp"
                                    android:layout_marginBottom="48dp"
                                    android:clipChildren="false"
                                    android:clipToPadding="false"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/setting_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="4dp"
                                        android:layout_weight="1"
                                        android:text="Settings"
                                        android:textColor="#0D1B34"
                                        android:textSize="32sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:id="@+id/select_language_frame"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/setting_frame"
                                        android:clipChildren="false"
                                        android:clipToPadding="false"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingHorizontal="22dp"
                                        android:paddingVertical="12dp">

                                        <TextView
                                            android:id="@+id/select_language_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Select Language"
                                            android:textColor="#6B6B6B"
                                            android:textSize="13sp" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />

                                        <ImageView
                                            android:id="@+id/ic_select_language"
                                            android:layout_width="4dp"
                                            android:layout_height="8dp"
                                            android:scaleType="fitXY"
                                            android:src="@mipmap/ic_select_language" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="173dp"
                                    android:clipChildren="false"
                                    android:clipToPadding="false"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ic_user"
                                        android:layout_width="61dp"
                                        android:layout_height="61dp"
                                        android:layout_marginEnd="13dp"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/ic_user" />

                                    <LinearLayout
                                        android:id="@+id/user_information"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:clipChildren="false"
                                        android:clipToPadding="false"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/username"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="1dp"
                                            android:layout_marginBottom="6dp"
                                            android:text="James"
                                            android:textColor="#0D1B34"
                                            android:textSize="20sp" />

                                        <TextView
                                            android:id="@+id/user_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="james@gmail.com"
                                            android:textColor="#5C5C5C"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
