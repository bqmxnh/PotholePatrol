<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false">


    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rqsguqb3u54s"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:paddingTop="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ref4lwpqm4xc_rl"
                android:layout_width="match_parent"
                android:layout_height="263dp"
                android:layout_marginBottom="0dp"
                android:layout_marginHorizontal="2dp"
                >
                <ImageView
                    android:id="@+id/ref4lwpqm4xc"
                    android:layout_width="match_parent"
                    android:layout_height="263dp"
                    android:src="@drawable/image_4"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_bar_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ic_back"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="52dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/right_arrow"
                            />

                        <TextView
                            android:id="@+id/title_report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/report_a_problem2"
                            android:textStyle="bold"
                            android:textColor="#0D1B34"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ic_report"
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:layout_marginHorizontal="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_report" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/report_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_3_shape"
                android:paddingVertical="25dp"
                android:paddingHorizontal="22dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="26dp"
                android:elevation="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/describe_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ic_write"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/image_report1"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/title_describe"
                        android:textColor="#0D1B34"
                        android:textSize="25sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/describe_your_problem"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/write_something_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="22dp"
                        android:paddingBottom="100dp"
                        android:paddingHorizontal="21dp"
                        android:layout_marginBottom="30dp"
                       >

                        <EditText
                            android:id="@+id/edit_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Write something here..."
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:gravity="top|start"
                            android:minHeight="100dp"
                            android:maxLines="6"
                            android:scrollbars="vertical" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="#AFC7B1"
                android:elevation="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="10dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                app:cornerRadius="15dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>