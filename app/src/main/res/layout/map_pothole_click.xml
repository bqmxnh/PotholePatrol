<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Centered image with margin -->
    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="9dp"
        android:layout_marginHorizontal="173dp"
        android:src="@mipmap/ic_close"
        android:scaleType="fitXY" />

    <!-- Details Container -->
    <LinearLayout
        android:id="@+id/details_container"
        android:layout_width="352dp"
        android:layout_height="179dp"
        android:background="@drawable/search_frame"
        android:paddingHorizontal="13dp"
        android:layout_marginBottom="33dp"
        android:layout_marginHorizontal="17dp"
        android:elevation="250dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/details_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="29dp"
            android:paddingHorizontal="19dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="UIT"
                android:textColor="#000000"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/title_address_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khu phố 6, Phường Linh Trung, Thành phố Thủ Đức"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
