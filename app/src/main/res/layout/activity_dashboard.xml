<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false">

    <ScrollView
        android:id="@+id/dashboard_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thanh bên trên -->
            <LinearLayout
                android:id="@+id/dashboard_green_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:background="@drawable/top_rounded_background"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="13dp"
                android:clipToOutline="true"
                android:elevation="1dp">

                <!-- Dashboard Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_report"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_report" />

                    <TextView
                        android:id="@+id/dashboard_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Dashboard"
                        android:textColor="#0D1B34"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ic_notification"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_notification" />
                </LinearLayout>
            </LinearLayout>

            <!-- Welcome Section -->
            <LinearLayout
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="39dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/welcome_title"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Hello,"
                        android:textColor="#8696BB"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Hi James"
                        android:textColor="#0D1B34"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have a nice day"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ic_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="46dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_heart" />

                <!-- Space between title and user image -->
                <LinearLayout
                    android:id="@+id/empty2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/ic_user"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_user" />
            </LinearLayout>

            <!-- Potholes Detected Section -->
            <LinearLayout
                android:id="@+id/pothole_detected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="17dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_potholes_detected"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="14dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_pothole" />

                <TextView
                    android:id="@+id/pothole_detected_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potholes Detected"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <!-- Space between title and data -->
                <LinearLayout
                    android:id="@+id/empty3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/potholes_detected_analyst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Distance Traveled Section -->
            <LinearLayout
                android:id="@+id/distance_traveled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="17dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_distance_traveled"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="13dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_distance" />

                <TextView
                    android:id="@+id/distance_traveled_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance Traveled"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <!-- Space between title and data -->
                <LinearLayout
                    android:id="@+id/empty4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/distance_traveled_analyst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6969 km"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Falls Section -->
            <LinearLayout
                android:id="@+id/falls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_falls"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_falls" />

                <TextView
                    android:id="@+id/falls_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Falls"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <!-- Space between title and data -->
                <LinearLayout
                    android:id="@+id/empty5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/falls_analyst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Chart Section -->
            <LinearLayout
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="48dp"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="188dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distribution of Potholes \nby Severity Level"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
