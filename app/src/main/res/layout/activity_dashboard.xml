<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/dashboard_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5">
        <!-- Màn hình chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Thanh bên trên -->
            <LinearLayout
                android:id="@+id/dashboard_green_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:background="@drawable/top_rounded_background"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="13dp"
                android:clipToOutline="true"
                android:elevation="1dp">

                <!-- Cụm Dashboard -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ic_report"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_report" />

                    <TextView
                        android:id="@+id/dashboard_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Dashboard"
                        android:textColor="#0D1B34"
                        android:textSize="28sp" />

                    <ImageView
                        android:id="@+id/ic_notification"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_notification" />
                </LinearLayout>
            </LinearLayout>
            <!-- Cum Welcome -->
            <LinearLayout
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="39dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/welcome_title"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/hello"
                        android:textColor="#8696BB"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Hello,"
                        />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Hi James"
                        android:textColor="#0D1B34"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/quotes"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Have a nice day "
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/ic_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="46dp"
                    android:src="@mipmap/ic_heart"
                    android:scaleType="fitXY"
                    />
                <!-- nay la khoang trang giua cum hi james va hinh user -->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/empty2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>

                <ImageView
                    android:id="@+id/ic_user"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_user" />
            </LinearLayout>
            <!-- Cum Potholes Detected -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pothole_detected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="17dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_potholes_detected"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="14dp"
                    android:src="@mipmap/ic_pothole"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/pothole_detected_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Potholes Detected"
                    />
                <!-- Khoang trang giua Pothole Detected va so lieu -->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/empty3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <!-- So lieu Potholes Detected-->
                <TextView
                    android:id="@+id/potholes_detected_analyst"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="69 "
                    />
            </LinearLayout>
            <!-- Cum Distance Traveled -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/distance_traveled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="17dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_distance_traveled"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="13dp"
                    android:src="@mipmap/ic_distance"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/distance_traveled_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Distance Traveled"
                    />
                <!-- Khoang trang giua Distance Traveled va so lieu -->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/empty4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:id="@+id/distance_traveled_analyst"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="6969 km"
                    />
            </LinearLayout>
            <!-- Cum Falls -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/falls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_falls"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/ic_falls"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/falls_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Falls"
                    />
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/empty5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:id="@+id/falls_analyst"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="69 "
                    />
            </LinearLayout>
            <!-- Cum bieu do -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_background"
                android:paddingVertical="48dp"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="188dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/chart_title"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Distribution of Potholes \nby Severity Level"
                    />
            </LinearLayout>
            <!-- Cum menu Dashboard, Map, Setting -->
            <LinearLayout
                android:id="@+id/menu_green_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_rounded_background"
                android:paddingVertical="14dp"
                android:orientation="vertical">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginHorizontal="37dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ic_dashboard"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@mipmap/ic_dashboard"
                        android:scaleType="fitXY"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/ic_map"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@mipmap/ic_map"
                        android:scaleType="fitXY"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/ic_setting"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@mipmap/ic_setting"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/menu_dashboard_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="91dp"
                        android:text="Dashboard"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_map_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/empty6"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/menu_setting_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/underline"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="@drawable/ic_underline"
                    android:layout_marginHorizontal="33dp"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>