<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/r8h0m93doygl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="2dp"
        android:paddingBottom="38dp"
        android:paddingHorizontal="2dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/rbszlx9xob0v"
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rog79wcr5r5o_rl"
                    android:layout_width="match_parent"
                    android:layout_height="263dp"
                    >
                    <ImageView
                        android:id="@+id/rog79wcr5r5o"
                        android:layout_width="match_parent"
                        android:layout_height="263dp"
                        android:src="@drawable/image_4"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="183dp">

                        <LinearLayout
                            android:id="@+id/rgeemv8p68rk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ryf8adb1l7k"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="38dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/right_arrow" />

                            <TextView
                                android:id="@+id/rx8qble9wfip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Terms &amp; Policies"
                                android:textColor="#0D1B34"
                                android:textSize="30sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/rr2694iajgig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_3_shape"
                    android:paddingVertical="27dp"
                    android:paddingHorizontal="18dp"
                    android:layout_marginTop="-140dp"
                    android:layout_marginHorizontal="24dp"
                    android:elevation="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/re9t03wa2sse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="By using Pothole Patrol, \nyou agree to the following:\n\n 1. Services: Users can report potholes with photos and GPS location to relevant authorities.\n\n 2. User Responsibilities: Do not submit false information or illegal content.\n\n 3. Personal Data: We collect personal info, location, and media solely for processing reports. Data may be shared with municipal services.\n\n 4. Liability: We are not responsible for delays or unresolved reports.\n\n 5. Updates: Terms may change, and continued use implies acceptance."
                        android:textColor="#000000"
                        android:textSize="23sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>