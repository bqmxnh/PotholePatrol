<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/personalization_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/_bg__privacy_ek2_shape"
        android:clipToPadding="false"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_container"
                android:layout_width="match_parent"
                android:layout_height="263dp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/blur_background"
                    android:layout_width="match_parent"
                    android:layout_height="263dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:id="@+id/title_personalization_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="33dp"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ic_back"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="61dp"
                            android:src="@drawable/right_arrow"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/title_personalization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Personalization"
                            android:textColor="#0D1B34"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_personalization"
                        android:layout_width="134dp"
                        android:layout_height="120dp"
                        android:layout_marginHorizontal="131dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_personalization" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/detection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="26dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_3_shape"
                android:paddingTop="19dp"
                android:paddingBottom="29dp"
                android:paddingHorizontal="23dp"
                android:elevation="10dp">

                <LinearLayout
                    android:id="@+id/detection_title_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ic_detection"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@mipmap/ic_detect"
                        android:scaleType="fitXY" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/title_detect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detection Sensitivity"
                        android:textColor="#0D1B34"
                        android:textSize="25sp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/level_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/ic_bar"
                        android:layout_width="299dp"
                        android:layout_height="12dp"
                        android:background="@drawable/level_bar"
                        android:layout_gravity="center"
                        android:orientation="horizontal" />

                    <ImageView
                        android:id="@+id/ic_level"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start"
                        android:src="@mipmap/ic_level"
                        android:scaleType="fitXY" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/title_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/title_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="95dp"
                        android:text="Low"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/title_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/empty_space"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/title_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="#AFC7B1"
                android:elevation="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="19dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                app:cornerRadius="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>