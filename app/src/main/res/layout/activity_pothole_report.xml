<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="38dp"
                android:layout_height="27dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/right_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_a_pothole"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Location Input -->
        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/setting_frame"
            android:elevation="5dp"
            android:padding="15dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GPS"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/setting_frame"
            android:elevation="5dp"
            android:padding="15dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"/>

        <!-- Dimension -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_frame"
            android:orientation="vertical"
            android:padding="13dp"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dimension2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_compact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/compact"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_average"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/average2"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/large"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Depth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_frame"
            android:orientation="vertical"
            android:padding="13dp"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/depth2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_shallow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shallow2"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_noticeable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/noticeable"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_deep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/deep"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Shape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_frame"
            android:orientation="vertical"
            android:padding="13dp"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shape2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_uniform"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/uniform"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_uneven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/uneven"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_jagged"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/jagged2"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Severity Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_frame"
            android:orientation="vertical"
            android:padding="13dp"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/severity_level2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_low"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/low2"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/medium2"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>

                <TextView
                    android:id="@+id/btn_high"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/high3"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/setting_frame"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Damage Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_frame"
            android:padding="16dp"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/do_pothole_damaged_you"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <Switch
                android:id="@+id/switch_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm2"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="20dp"
            android:padding="16dp"
            android:gravity="center"
            android:elevation="5dp" />

    </LinearLayout>
</ScrollView>